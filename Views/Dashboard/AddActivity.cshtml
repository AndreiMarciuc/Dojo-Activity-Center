@{
    Layout = "_Layout";
}
@if (ViewBag.err !=null){
    <div class= "alert alert-danger">
        <strong>@ViewBag.err</strong>
    </div>
}

<hr>
<div class="col-md-10">
    <div class="container">
        <h2>Add A Activity</h2>
        @model exam.Models.ActivityViewModel
        <form asp-action="CreateActivity" asp-controller="Dashboard" method="POST">
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <span class="err" asp-validation-for="Title"></span>
                <input class="form-control" asp-for="Title">
            </div>
            <div class="form-group">
                <label asp-for="Date">Date:</label>
                <span class="err" asp-validation-for="Date"></span>
                <input class="form-control" asp-for="Date">
            </div>
            <div class="form-group">
                <label asp-for="Time">Time:</label>
                <span class="err" asp-validation-for="Time"></span>
                <input class="form-control" asp-for="Time">
            </div>
            <div class="form-group">
                <label asp-for="Duration">Duration:</label>
                <span class="err" asp-validation-for="Duration"></span>
                <input class="form-control" asp-for="Duration">
                
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <span class="err" asp-validation-for="Description"></span>
                <input class="form-control" asp-for="Description">
            </div>
           
            
            <button type="submit" class="btn btn-primary">Create Activity</button>
        </form>
    </div>
</div>